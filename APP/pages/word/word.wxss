/* pages/word/word.wxss */

.searchBar {
  padding: 20rpx;
  width: 580rpx;
  height: 48rpx;
  background-color: #fff;
  border-radius: 68rpx;
  display: flex;
  align-items: center;
}

.cancel {
  text-align: center;
  width: 100rpx;
  font-size: 36rpx;
  color: #797979;
  font-weight: bolder;
}

.row1, .row2, .row3, .row4, .row5 {
  padding: 20rpx 20rpx;
  margin: 20rpx auto;
  width: 100%;
  background-color: #fff;
}

.row1 {
  display: flex;
  flex-direction: row;
  height: 240rpx;
}

.wordMeaning {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 600rpx;
}

.word {
  font-size: 26px;
  font-weight: bolder;
}

.markNew {
  height: 42rpx;
  width: 118rpx;
  font-size: 12px;
  line-height: 42rpx;
  text-align: center;
  background-color: #000;
  border-radius: 118rpx;
  color: #fff;
}

.row2 {
  height: 370rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.Example {
  font-weight: bolder;
}

.row3,.row4,.row5 {
  height: 56rpx;
  font-weight: bolder;
}

.row5 {
  text-align: center;
}
